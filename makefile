#------------------------------------------------------------------------------#
# Name and files                                                               #
#------------------------------------------------------------------------------#
NAME      := libft.a
H_FILE    := libft.h
C_FILES   := ${wildcard *.c}
O_FILES   := ${C_FILES:%.c=%.o}

#------------------------------------------------------------------------------#
# Compiler and flags                                                           #
#------------------------------------------------------------------------------#
CC        := gcc
AR        := ar
C_FLAGS   := -v -Wall -Werror -Wextra -O3 -fpic
A_FLAGS   := rcs

#------------------------------------------------------------------------------#
# Rules                                                                        #
#------------------------------------------------------------------------------#
.PHONY : all, clean, fclean, re
%.o : %.c
	${CC} ${C_FLAGS} -c $< -o $@
${NAME} : ${H_FILE} ${O_FILES}
	${AR} ${A_FLAGS} ${NAME} ${O_FILES}
all : ${NAME}
clean :
	rm -vf ${O_FILES}
fclean:	clean
	rm -vf ${NAME}
re:	fclean all
